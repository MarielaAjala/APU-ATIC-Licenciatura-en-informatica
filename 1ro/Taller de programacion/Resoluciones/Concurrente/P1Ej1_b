programa P1_ej1
procesos
  proceso Avenida 
  variables
    n:numero
    flores: numero
    avenidas: numero
  comenzar
    flores := 0
    avenidas :=0
    n:= 99
    repetir n
      si ~ HayFlorEnLaEsquina
        avenidas := avenidas + 1
      mientras HayFlorEnLaEsquina
        tomarFlor
      mover
    si ~ HayFlorEnLaEsquina
      avenidas := avenidas + 1
    mientras HayFlorEnLaEsquina
      tomarFlor
    Informar (avenidas)
    mientras HayFlorEnLaBolsa
      depositarFlor
      flores := flores + 1
    Informar (flores)
  fin
areas
  ciudad : AreaC(1,1,100,100)
robots
  robot tipo1
  comenzar
    Avenida
  fin
variables
  robot1,robot2,robot3: tipo1
comenzar
  AsignarArea(robot1,ciudad)
  AsignarArea(robot2,ciudad)
  AsignarArea(robot3,ciudad)
  Iniciar(robot1,1,1)
  Iniciar(robot2,3,1)
  Iniciar(robot3,5,1)
fin