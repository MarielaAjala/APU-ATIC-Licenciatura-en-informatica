programa P1_ej1
procesos
  proceso Avenida 
  variables
    n:numero
    flores: numero
    avenidas: numero
  comenzar
    flores := 0
    avenidas :=0
    n:= 99
    repetir n
      si ~ HayFlorEnLaEsquina
        avenidas := avenidas + 1
      mientras HayFlorEnLaEsquina
        tomarFlor
      mover
    si ~ HayFlorEnLaEsquina
      avenidas := avenidas + 1
    mientras HayFlorEnLaEsquina
      tomarFlor
    Informar (avenidas)
    mientras HayFlorEnLaBolsa
      depositarFlor
      flores := flores + 1
    Informar (flores)
  fin
areas
  ciudad : AreaC(1,1,100,100)
robots
  robot tipo1
  variables
    avenida:numero
  comenzar
    avenida:=1
    repetir 3
      Pos(avenida,1)
      Avenida
      avenida:=avenida+2
  fin
variables
  robot1: tipo1
comenzar
  AsignarArea(robot1,ciudad)
  Iniciar(robot1,1,1)
fin