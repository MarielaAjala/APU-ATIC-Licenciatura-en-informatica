programa Tp1Ej5
procesos
  proceso quitarFlores
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
  fin
  proceso quitarPapeles
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
  fin
  proceso depositarPapeles
  comenzar
    mientras HayPapelEnLaBolsa
      depositarPapel
  fin
  proceso depositarFlores
  comenzar
    mientras HayFlorEnLaBolsa
      depositarFlor 
  fin
  proceso limpiarEsquinasDeFlores(E cantEsquinas:numero)
  comenzar
    repetir (cantEsquinas-1)
      quitarFlores
      mover
    quitarFlores
  fin
  proceso limpiarEsquinasDePapeles(E cantEsquinas:numero)
  comenzar
    repetir (cantEsquinas-1)
      quitarPapeles
      mover
    quitarPapeles
    Informar(PosCa)
  fin 
areas
  inicioCalle75: AreaP (1,75,15,75) {robot1}
  inicioCalle80: AreaP (1,80,15,80) 
  finalAvenida75: AreaP (75,81,75,100){robot2}
  finalAvenida80: AreaP (80,81,80,100)
  finalCalle10: AreaP (71,10,100,10){robot3}
  finalCalle15: AreaP (71,15,100,15)
  inicioAvenida10: AreaP (10,1,10,10){robot4}
  inicioAvenida15: AreaP (15,1,15,10) 
robots
  robot tipo1
  variables
    n,avIni:numero
  comenzar
    {calle 75, de 1-15}
    avIni:=PosAv
    derecha
    si (PosCa=75)
      n:=15
    si (PosCa=10)
      n:=30
    limpiarEsquinasDeFlores(n)
    depositarFlores
    Pos(avIni,PosCa+5)
    limpiarEsquinasDeFlores(n)
    depositarFlores
  fin
  robot tipo2
  variables
    n,calleIni:numero
  comenzar
    si (PosAv=75)
      n:=20
    si (PosAv=10)
      n:=10
    calleIni:=PosCa
    limpiarEsquinasDePapeles(n)
    Pos(PosAv,calleIni)
    depositarPapeles
    Pos(PosAv+5,calleIni)
    limpiarEsquinasDePapeles(n)
    Pos(PosAv,calleIni){o Pos(PosAv,PosCa-(n-1))}
    depositarPapeles    
  fin
variables
  robot1: tipo1
  robot2: tipo2
  robot3: tipo1
  robot4: tipo2
comenzar
  AsignarArea(robot1,inicioCalle75)
  AsignarArea(robot1,inicioCalle80)
  AsignarArea(robot2,finalAvenida75)
  AsignarArea(robot2,finalAvenida80)
  AsignarArea(robot3,finalCalle10)
  AsignarArea(robot3,finalCalle15)
  AsignarArea(robot4,inicioAvenida10)
  AsignarArea(robot4,inicioAvenida15)
  Iniciar(robot1,1,75)
  Iniciar(robot2,75,81)
  Iniciar(robot3,71,10)
  Iniciar(robot4,10,1)  
fin
