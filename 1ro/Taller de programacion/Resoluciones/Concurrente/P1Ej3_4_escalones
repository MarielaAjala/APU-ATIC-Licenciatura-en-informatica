programa P1Ej3_3_escalones
procesos
  proceso contarFloresYPapeles(ES flores:numero;ES papeles: numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flores:=flores+1
    mientras HayPapelEnLaEsquina
      tomarPapel
      papeles:=papeles+1
    {Luego de contar, vacio la bolsa}
    {para que la esquina quede igual}
    mientras HayFlorEnLaBolsa
      depositarFlor
    mientras HayPapelEnLaBolsa
      depositarPapel
  fin
  proceso escalon(E tamanio: numero; ES superoEn1: boolean)
  variables
    flores,papeles: numero
  comenzar
    flores:=0
    papeles:=0
    repetir tamanio
      {Cuento las flores}
      contarFloresYPapeles(flores,papeles)
      mover
    derecha
    repetir tamanio
      contarFloresYPapeles(flores,papeles)
      mover
    repetir 3
      derecha
    superoEn1:=(papeles-flores)=1
  fin
  proceso escalera
  variables
    i: numero
    cantPapMayor:numero
    supero:boolean
  comenzar
    cantPapMayor:=0
    i:=1
    repetir 4
      escalon(i,supero)
      si(supero)
        cantPapMayor:=cantPapMayor+1
      i:=i+1
    Informar(cantPapMayor)
  fin
areas
  areaEscaleras: AreaPC (12,6,32,24)
robots
  robot tipo1
  comenzar
    escalera
  fin
variables
  robot1: tipo1
  robot2: tipo1
  robot3: tipo1
comenzar
  AsignarArea(robot1,areaEscaleras)
  AsignarArea(robot2,areaEscaleras)
  AsignarArea(robot3,areaEscaleras)
  Iniciar(robot1,12,14)
  Iniciar(robot2,17,10)
  Iniciar(robot3,22,6)
fin